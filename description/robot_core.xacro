<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <!-- <xacro:property name="chassis_radius" value="0.175"/>
    <xacro:property name="chassis_height" value="0.085"/>
    <xacro:property name="chassis_mass" value="1.0"/> <xacro:property name="wheel_radius" value="0.035"/>
    <xacro:property name="wheel_width" value="0.015"/>
    <xacro:property name="wheel_mass" value="0.05"/>

    <xacro:property name="wheel_offset_y" value="0.1365"/>
    
    <xacro:property name="chassis_z_offset" value="0.0575"/> 
    
    <xacro:property name="caster_x_offset" value="0.145"/> -->


    <material name="white">
        <color rgba="1 1 1 1" />
    </material>
    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>
    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>
    <material name="black">
        <color rgba="0 0 0 1" />
    </material>
    <material name="red">
        <color rgba="1 0 0 1" />
    </material>

    <link name="base_footprint">
    </link>

    <!-- BASE  -->
    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.035" rpy="0 0 0"/>
    </joint>

    <link name="base_link">
    </link>

    <!-- CHASSIS ONE (CYLINDER) -->
    <joint name="chassis_one_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis_one"/>
        <origin xyz="0 0 0.0225"/>
    </joint>

    <link name="chassis_one">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.175" length="0.085"/>
            </geometry>
            <material name="white"/>
        </visual>

        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.175" length="0.085"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass = "2.5" length="0.085" radius="0.175">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>

    </link>

    <gazebo reference="chassis_one">
        <material>Gazebo/White</material>
    </gazebo>


    <!-- CHASSIS TWO (BOX) -->
    <joint name="chassis_two_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis_two"/>
        <origin xyz="0 0 -0.02"/>
    </joint>

    <link name="chassis_two">
        <visual>
            <origin xyz="0.075 0 0.0425"/>
            <geometry>
                <box size="0.15 0.16 0.085"/>
            </geometry>
            <material name="orange"/>
        </visual>

        <collision>
            <origin xyz="0.075 0 0.0425"/>
            <geometry>
                <box size="0.15 0.16 0.085"/>
            </geometry>
        </collision>

        <xacro:inertial_box mass="1" x="0.15" y="0.16" z="0.085">
            <origin xyz="0.075 0 0.0425" rpy="0 0 0"/>
        </xacro:inertial_box>

    </link>

    <gazebo reference="chassis_two">
        <material>Gazebo/Orange</material>
    </gazebo>

    <!-- LEFT WHEEL -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.1365 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.035" length="0.015"/>
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.035" length="0.015"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass = "0.1" length="0.015" radius="0.035">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>

    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- RIGHT WHEEL -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.1365 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.035" length="0.015"/>
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.035" length="0.015"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass = "0.1" length="0.015" radius="0.035">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>

    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- CASTER WHEEL -->
    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis_two"/>
        <child link="caster_wheel"/>
        <origin xyz="0.15 0 0"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.015"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision>
            <geometry>
                <sphere radius="0.015"/>
            </geometry>
        </collision>

        <xacro:inertial_sphere mass="0.1" radius="0.015">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>

    </link>

    <gazebo reference="caster_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

</robot>